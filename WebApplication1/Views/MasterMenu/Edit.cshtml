@{
}
<div class="row">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Edit Category</h1>
    </div>

    <div class="col-lg-12">
        <!-- Basic Card Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Edit Category</h6>
            </div>
            <div class="card-body">
                @Html.Raw(ViewData["message"])
                <form asp-action="Edit">
                    <div class="form-group">
                        <label for="ArticleID">ArticleID :</label>
                        <input type="text" class="form-control" name="id_menu" readonly value="@Model.id_menu" />
                    </div>
                    <div class="form-group">
                        <label for="nama_menu">nama_menu:</label>
                        <input type="text" class="form-control" name="nama_menu" value="@Model.nama_menu" />

                    </div>
                    <div>
                        <label for="harga_menu">harga_menu:</label>
                        <input type="text" class="form-control" name="harga_menu" value="@Model.harga_menu" />
                    </div>
                    <div>
                        <label for="deskripsi_menu">deskripsi_menu :</label>
                        <input type="text" class="form-control" name="deskripsi_menu" value="@Model.deskripsi_menu" />
                    </div>
            

                    <div class="form-group">
                        <input type="Submit" class="btn btn-success btn-sm" value="Edit" />
                    </div>
                </form>
            </div>
        </div>

    </div>

</div>